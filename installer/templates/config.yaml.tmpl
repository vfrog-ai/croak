# CROAK Configuration
# Generated by croak init
# Documentation: https://croak.vfrog.ai/docs/config

version: "1.0"

project:
  name: "{{PROJECT_NAME}}"
  task_type: "detection"
  created_at: "{{CREATED_AT}}"

vfrog:
  api_key_env: "VFROG_API_KEY"
  project_id: ""

compute:
  provider: "{{COMPUTE_PROVIDER}}"
  gpu_type: "T4"
  timeout_hours: 4

training:
  framework: "ultralytics"
  architecture: "{{ARCHITECTURE}}"
  epochs: 100
  batch_size: 16
  image_size: 640
  patience: 20

tracking:
  backend: "{{TRACKING_BACKEND}}"
  mlflow:
    tracking_uri: "./mlruns"
  wandb:
    project: "{{PROJECT_NAME}}"

data:
  format: "yolo"
  splits:
    train: 0.8
    val: 0.15
    test: 0.05

deployment:
  cloud:
    provider: "vfrog"
    auto_scaling: true
    min_replicas: 1
    max_replicas: 5
  edge:
    format: "tensorrt"
    precision: "fp16"

agents:
  verbose: true
  auto_confirm: false
